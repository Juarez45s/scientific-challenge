<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quizzes Guardados</title>
    <style>
        body {
            background: linear-gradient(180deg, #008080, #000080);
            color: white;
            font-family: sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            flex-direction: column;
        }
        .container {
            width: 80%;
            max-width: 800px;
            background-color: rgba(240, 242, 242, 0.976);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 10px rgba(247, 245, 245, 0.967);
            overflow-y: auto;
            max-height: 80vh;
            color: #000;
        }
        h1 {
            text-align: center;
            color: #000;
        }
        .quiz {
            margin-bottom: 20px;
            padding: 10px;
            background-color: rgba(11, 11, 11, 0.1);
            border-radius: 5px;
        }
        .question {
            font-weight: bold;
        }
        .options {
            margin-left: 20px;
        }
        .button-container {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }
        .edit-button, .delete-button {
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .edit-button {
            background-color: #007BFF;
            color: white;
        }
        .delete-button {
            background-color: #FF0000;
            color: white;
        }
        .main-button {
            width: 250px;
            padding: 15px 0;
            font-size: 1.1em;
            border: none;
            border-radius: 50px;
            background-color: #000;
            color: #fff;
        }

        
        @media (max-width: 768px) {
            .container {
                max-width: 100%;
                padding: 15px;
            }

            button {
                font-size: 14px;
                padding: 8px 12px;
                margin-top: 5px;
            }

            input[type="text"] {
                font-size: 14px;
                padding: 6px;
            }

            h2 {
                font-size: 20px;
            }

            .share-code {
                font-size: 16px;
            }
        }

        @media (max-width: 480px) {
            .container {
                padding: 10px;
            }

            button {
                font-size: 12px;
                padding: 6px 10px;
                margin-top: 5px;
            }

            input[type="text"] {
                font-size: 12px;
                padding: 5px;
            }

            h2 {
                font-size: 18px;
            }

            .share-code {
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Quizzes Guardados</h1>
        <div id="quizzes-container"></div>
        <button class="main-button" onclick="location.href='crear-new'">Nuevo Quiz</button>
    </div>
    <script>
        const quizzesContainer = document.getElementById('quizzes-container');
        let quizzes = JSON.parse(localStorage.getItem('quizzes')) || [];

        function renderQuizzes() {
            quizzesContainer.innerHTML = '';
            if (quizzes.length > 0) {
                quizzes.forEach((quiz, index) => {
                    const quizElement = document.createElement('div');
                    quizElement.classList.add('quiz');
                    quizElement.innerHTML = `
                        <div class="question">Quiz: ${quiz.name}</div>
                        
                        <div>Código: ${quiz.code}</div>
                        <div class="button-container">
                            <button class="delete-button" onclick="deleteQuiz(${index})">Eliminar</button>
                        </div>
                    `;
                    quizzesContainer.appendChild(quizElement);
                });
            } else {
                quizzesContainer.innerHTML = '<p>No hay quizzes guardados.</p>';
            }
        }

        function deleteQuiz(index) {
            if (confirm('¿Estás seguro de que deseas eliminar este quiz?')) {
                
                quizzes.splice(index, 1);
                
                localStorage.setItem('quizzes', JSON.stringify(quizzes));
               
                renderQuizzes();
            }
        }

        renderQuizzes();
    </script>
</body>
</html>
